Title: <%= @job.title %>
<br>

Description: <%= @job.description %>
<br>

Level of Interest: <%= @job.level_of_interest %>
<br>

City: <%= @job.city %>
<br>

Company: <%= link_to @job.company.name, company_path(@job.company) %>
<br>

Category:
  <% if @job.category.nil? %>
    <%= "No Category" %>
  <% else %>
    <%= link_to @job.category.title, category_path(@job.category) %>
  <% end %>

<p><%= link_to "Delete Job", company_job_path(@job.company, @job), method: :delete, data: {confirm: "Really delete the article?"} %></p>
<p><%= link_to "Edit Job", edit_company_job_path(@job.company, @job) %></p>

<h2>Comments (<%= @job.comments.size %>)</h2>
<%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
<%= render partial: 'comments/form' %>
